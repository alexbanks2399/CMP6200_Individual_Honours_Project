! Generated from 'switchport-interface-template.j2' for device '{{device_name}}' at {{date_time}}
interface {{ interface }}
	description Connected to {{ connected }} {{ link }} for {{ purpose }}
	switchport
	{% if vlan == "trunk" -%}
	switchport mode trunk
	{% else -%}
	switchport mode access
	switchport access vlan {{ vlan }}
	spanning-tree portfast
	spanning-tree bdpuguard enable
	{% endif -%}
	no shutdown
	end
!
